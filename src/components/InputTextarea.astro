---
interface Props {
  label: string;
  name: string;
  classList: string[];
  placeholder?: string;
  aria?: boolean;
}

const {label, name, classList, placeholder, aria = false}: Props = Astro.props;
---

<div class="util-form-fieldset fieldset">
  <link rel="stylesheet" href="./components/input-textarea.css"/>
  {!aria && (
    <label class="label" for={name}>{label}</label>
  )}
  <div class="textarea-wrapper">
    <textarea name={name} id={name} maxlength="512" aria-label={label}
              autocorrect="off" spellcheck="true" placeholder={placeholder}
              class:list={['util-form-field', 'textarea', ...classList]}></textarea>
    <textarea maxlength="512" aria-label=""
              autocorrect="off" spellcheck="true"
              class:list={['util-form-field', 'textarea-fake', ...classList]}></textarea>
  </div>
  <script src="./components/input-textarea.js" is:inline async></script>
</div>
