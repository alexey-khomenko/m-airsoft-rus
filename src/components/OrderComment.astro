---
import UtilTile from '../components/UtilTile.astro';
import InputTextarea from '../components/InputTextarea.astro';

interface Props {
  comment: string;
}

const {comment}: Props = Astro.props;
---

<UtilTile tag="div" classList={['rows', 'order-comment']}>
  <link rel="stylesheet" href="./components/order-comment.css"/>

  <div class="order-header">
    <h2 class="h2">Комментарий к заказу</h2>
    <button type="button" class="button" data-order-comment-form-open>
      <span data-order-comment-form-add hidden={0 < comment.length}>Добавить</span>
      <span data-order-comment-form-edit hidden={0 === comment.length}>Изменить</span>
    </button>
    <button type="button" class="button" data-order-comment-form-close hidden>
      <span>Закрыть</span>
    </button>
  </div>

  <div class="info" data-order-comment-output hidden={0 === comment.length}>
    <pre class="comment" data-info-comment>{comment}</pre>
  </div>

  <form class="form" action="/api-order-comment" novalidate data-form-order-comment hidden>

    <InputTextarea label="Комментарий к заказу" name="comment" classList={['strong']} aria={true}
                   placeholder="Просьбы и пожелания ..."/>

    <button type="submit" class="util-button primary button">
      <span>Применить и сохранить</span>
    </button>
  </form>

  <script src="./components/order-comment.js" is:inline async></script>
</UtilTile>
