---
interface Props {
  tag: 'div' | 'section';
  classList: string[];
  isHidden: boolean;
  dataArray?: string[];
}

const {tag, classList, isHidden, dataArray = []}: Props = Astro.props;

const html: string = `<${tag} class="util-tile ${classList.join(' ')}" ${dataArray.join(' ')} ${isHidden ? 'hidden' : ''}>`;
---

<Fragment set:html={html}/>
<link rel="stylesheet" href="./components/util-tile.css"/>
<slot/>
<Fragment set:html={`</${tag}>`}/>
