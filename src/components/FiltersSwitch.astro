---
import type {IFilterCheckbox} from '../interfaces';

interface Props {
  checkbox: IFilterCheckbox;
}

const {checkbox}: Props = Astro.props;

const {label, name}: IFilterCheckbox = checkbox;
---

<div class="filters-switch">
  <link rel="stylesheet" href="./components/filters-switch.css"/>
  <label for={name} class="label title">{label}</label>
  <input type="checkbox" value="Y" class="input" name={name} id={name}/>
</div>
