---
interface Props {
  value: number;
  className: string;
}

const {value, className}: Props = Astro.props;
---

<link rel="stylesheet" href="./components/rating.css"/>
<input type="range" min="0" max="5" step="0.1" aria-label="Рейтинг" readonly
       class:list={['rating', className]}
       value={value} title={value ? `${value}/5` : 'Без оценки'}
       style={`--val: ${value}`}/>
