---
interface Props {
  tag: 'div' | 'section';
  classList: string[];
}

const {tag, classList}: Props = Astro.props;

const html: string = `<${tag} class="util-header ${classList.join(' ')}">`;
// TODO Сделать компонент для большинства страниц (кроме профиля?)
//  profile
//  popup
//  page
---

<Fragment set:html={html}/>
<link rel="stylesheet" href="./components/util-header.css"/>
<slot/>
<Fragment set:html={`</${tag}>`}/>
