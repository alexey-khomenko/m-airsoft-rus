---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
import SectionBreadcrumbs from '../components/SectionBreadcrumbs.astro';
import SectionPageTitle from '../components/SectionPageTitle.astro';
import SliderProducts from '../components/SliderProducts.astro';
import Rating from '../components/Rating.astro';

import type {ICatalogDetail, ILink, IProduct, IUser, IComparisonProductProperty, IOption, IStore} from '../interfaces';

import data from '../pages/catalog-detail.json';
import InputTextarea from '../components/InputTextarea.astro';

const {product, user, recommendations, popular}: ICatalogDetail = data;

const {
  id, name, link, rating, sections, inCart, photos, oldPrice, price, bonus, availability, stores, sizes, properties,
}: IProduct = product;

const userInfo: IUser | undefined = user ? user : undefined;

const breadcrumbs: ILink[] = [{link: '/catalog', name: 'Каталог'}];

for (const section of sections) {
  breadcrumbs.push(section);
}

breadcrumbs.push({link, name});

// TODO https://schema.org/AggregateRating Example 2
/* {
  "@context": "http://schema.org/",
  "@type": "Organization",
  "name": "Air-soft",
  "url": "https://m.airsoft-rus.ru",
  "hasMerchantReturnPolicy": {
    "@type": "https://schema.org/MerchantReturnPolicy",
    "merchantReturnLink": "https://m.airsoft-rus.ru/warranty-and-returns/",
    "returnPolicyCategory": "Finite",
    "merchantReturnDays": "20",
    "refundType": "FullRefund",
    "inStoreReturnsOffered": "True"
  }
} */
---

<Layout title="Детальная страница товара" page="catalog-detail" isUser={true} userInfo={userInfo} productId={id}>
  <link rel="stylesheet" href="./pages/catalog-detail.css"/>
  <div class="page-wrapper">
    <Container>
      <SectionBreadcrumbs pages={breadcrumbs}/>

      <SectionPageTitle title={name}/>

      <section class="section-top">
        <div class="top-rows">
          <div class="row">
            <div class="l">
              <div class="t">
                <Rating value={rating} className="detail"/>
              </div>
              <div class="b">
                (2 отзыва)
              </div>
            </div>
            <div class="r">
              <div class="t">
                <span>+20% кэшбека</span>
              </div>
              <div class="b">
                на <a href="#" class="link" data-popup-open="bonus">бонусный</a> счет
              </div>
            </div>
          </div>
          <div class="row">
            <div class="l"></div>
            <div class="r">
              <div class="t">
                <svg width="13" height="13" viewBox="0 0 13 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                        d="M6.50006 4.13339V6.8001M7.33081 0.805867L8.1448 1.49954C8.34987 1.6743 8.6045 1.77996 8.87308 1.80139L9.93913 1.88635C10.5659 1.93637 11.0637 2.43389 11.1137 3.06066L11.1985 4.12688C11.2199 4.39547 11.326 4.65046 11.5007 4.85553L12.1941 5.6693C12.6019 6.14785 12.602 6.85179 12.1942 7.33035L11.5008 8.14424C11.326 8.34931 11.2201 8.6044 11.1987 8.87299L11.1134 9.93903C11.0634 10.5658 10.5663 11.0636 9.93957 11.1137L8.87315 11.1987C8.60457 11.2202 8.3497 11.3256 8.14462 11.5003L7.33081 12.194C6.85225 12.6018 6.14788 12.6019 5.66932 12.1941L4.85551 11.5004C4.65043 11.3256 4.39556 11.22 4.12698 11.1986L3.06056 11.1137C2.43379 11.0636 1.93673 10.5659 1.88671 9.93915L1.80142 8.87305C1.77999 8.60447 1.67409 8.3496 1.49933 8.14453L0.805963 7.33039C0.39814 6.85183 0.397949 6.14811 0.805771 5.66955L1.49977 4.85541C1.67453 4.65034 1.7794 4.39547 1.80084 4.12688L1.88612 3.06079C1.93614 2.43402 2.43464 1.9363 3.06141 1.88629L4.12665 1.80133C4.39524 1.77989 4.65023 1.67432 4.8553 1.49956L5.66939 0.805867C6.14795 0.398044 6.85225 0.398044 7.33081 0.805867ZM6.53327 8.80014V8.8668L6.46686 8.86654V8.80014H6.53327Z"/>
                </svg>
                <span>Гарантия</span>
              </div>
              <div class="b">
                низкой цены
              </div>
            </div>
          </div>
        </div>

        {0 < photos.length && (
          <div class="photos">
            <div class="swiper-wrapper">
              {photos.map((img: string) => (
                <img src={img} alt="" class="swiper-slide img" decoding="async" loading="lazy"/>
              ))}
            </div>
            <div class="swiper-pagination"></div>
          </div>
        )}

        <div class="bottom-rows bordered-rows">
          <div class="row">
            <div class="l"><a href="#" class="link">Гарантия</a> низкой цены!</div>
            <div class="r">Рассрочка <a href="#" class="link">0-0-5</a></div>
          </div>
          <div class="row">
            <div class="l"><a href="#" class="link">Бесплатная</a> доставка</div>
            <div class="r">Рассрочка <a href="#" class="link">0-0-6</a></div>
          </div>
        </div>
      </section>

      <section class="section-buy">
        <div class="misc">
          <div class="l">
            <div class="discount">
              <span>выгода {(oldPrice - price).toLocaleString('ru-RU')}</span>
              <span class="currency">₽</span>
            </div>

            <div class="prices">
              <div class="price">
                <span>{price.toLocaleString('ru-RU')}</span>
                <span class="currency">₽</span>
              </div>
              <div class="old-price">
                <span>{oldPrice.toLocaleString('ru-RU')}</span>
                <span class="currency">₽</span>
              </div>
            </div>

            <div class="bonus">
              <span class="sum">+{bonus.toLocaleString('ru-RU')} ₽</span>
              <span class="txt">на бонусный счет</span>
            </div>
          </div>
          <div class="r">
            <button type="button" class="button" data-favourite-add-product-id={id}>
              <svg class="svg" width="22" height="20" viewBox="0 0 22 20" fill="none"
                   xmlns="http://www.w3.org/2000/svg">
                <path fill="#009AE3" fill-opacity="0.1" stroke="#009AE3" stroke-width="1.6" stroke-linecap="round"
                      d="M10.7998 4.30468C8.57758 -0.911364 0.799805 -0.355808 0.799805 6.31089C0.799805 12.9776 10.7998 18.5333 10.7998 18.5333C10.7998 18.5333 20.7998 12.9776 20.7998 6.31089C20.7998 -0.355808 13.022 -0.911364 10.7998 4.30468Z"
                      stroke-linejoin="round"/>
              </svg>
              <span>добавить<br/>в избранное</span>
            </button>
            <button type="button" class="button" data-favourite-remove-product-id={id} hidden>
              <svg class="svg" width="22" height="20" viewBox="0 0 22 20" fill="none"
                   xmlns="http://www.w3.org/2000/svg">
                <path fill="#009AE3" fill-opacity="1.0" stroke="#009AE3" stroke-width="1.6" stroke-linecap="round"
                      d="M10.7998 4.30468C8.57758 -0.911364 0.799805 -0.355808 0.799805 6.31089C0.799805 12.9776 10.7998 18.5333 10.7998 18.5333C10.7998 18.5333 20.7998 12.9776 20.7998 6.31089C20.7998 -0.355808 13.022 -0.911364 10.7998 4.30468Z"
                      stroke-linejoin="round"/>
              </svg>
              <span>удалить из<br/>избранного</span>
            </button>

            <button type="button" class="button" data-comparison-add-product-id={id}>
              <svg class="svg" width="20" height="18" viewBox="0 0 20 18" fill="none"
                   xmlns="http://www.w3.org/2000/svg">
                <path stroke="#939C9F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                      d="M7 8V17M7 8H2.59961C2.03956 8 1.75981 8 1.5459 8.10899C1.35774 8.20487 1.20487 8.35774 1.10899 8.5459C1 8.75981 1 9.04004 1 9.6001V17H7M7 8V2.6001C7 2.04004 7 1.75981 7.10899 1.5459C7.20487 1.35774 7.35774 1.20487 7.5459 1.10899C7.75981 1 8.03956 1 8.59961 1H11.3996C11.9597 1 12.2403 1 12.4542 1.10899C12.6423 1.20487 12.7948 1.35774 12.8906 1.5459C12.9996 1.75981 13 2.04005 13 2.6001V5M7 17H13M13 17L19 17.0001V6.6001C19 6.04005 18.9996 5.75981 18.8906 5.5459C18.7948 5.35774 18.6429 5.20487 18.4548 5.10899C18.2409 5 17.9601 5 17.4 5H13M13 17V5"/>
              </svg>
              <span>добавить<br/>в сравнение</span>
            </button>
            <button type="button" class="button" data-comparison-remove-product-id={id} hidden>
              <svg class="svg" width="20" height="18" viewBox="0 0 20 18" fill="none"
                   xmlns="http://www.w3.org/2000/svg">
                <path stroke="#939C9F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="#939C9F"
                      d="M7 8V17M7 8H2.59961C2.03956 8 1.75981 8 1.5459 8.10899C1.35774 8.20487 1.20487 8.35774 1.10899 8.5459C1 8.75981 1 9.04004 1 9.6001V17H7M7 8V2.6001C7 2.04004 7 1.75981 7.10899 1.5459C7.20487 1.35774 7.35774 1.20487 7.5459 1.10899C7.75981 1 8.03956 1 8.59961 1H11.3996C11.9597 1 12.2403 1 12.4542 1.10899C12.6423 1.20487 12.7948 1.35774 12.8906 1.5459C12.9996 1.75981 13 2.04005 13 2.6001V5M7 17H13M13 17L19 17.0001V6.6001C19 6.04005 18.9996 5.75981 18.8906 5.5459C18.7948 5.35774 18.6429 5.20487 18.4548 5.10899C18.2409 5 17.9601 5 17.4 5H13M13 17V5"/>
              </svg>
              <span>удалить из<br/>сравнения</span>
            </button>
          </div>
        </div>

        <button type="button" class="util-button one-click" data-popup-open="one-click">
          <svg width="22" height="22" viewBox="0 0 24 25" xmlns="http://www.w3.org/2000/svg">
            <path stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"
                  d="M18.3289 18.9701C16.9529 18.9701 15.8373 20.0856 15.8373 21.4617C15.8373 22.8377 16.9529 23.9533 18.3289 23.9533C19.705 23.9533 20.8205 22.8377 20.8205 21.4617C20.8205 20.0856 19.705 18.9701 18.3289 18.9701ZM18.3289 18.9701H8.72871C8.15432 18.9701 7.8666 18.9701 7.63012 18.8679C7.42151 18.7777 7.24052 18.6326 7.10866 18.4475C6.96087 18.24 6.90142 17.9626 6.78376 17.4135L3.71752 3.10431C3.59712 2.54244 3.53611 2.26181 3.3866 2.05195C3.25474 1.86686 3.07379 1.72118 2.86518 1.63102C2.62865 1.52881 2.34253 1.52881 1.7679 1.52881H0.887695M4.62511 5.26622H20.6626C21.5618 5.26622 22.0109 5.26622 22.3127 5.45354C22.5771 5.61761 22.7706 5.87494 22.855 6.17441C22.9513 6.5163 22.8276 6.94801 22.5784 7.81196L20.8534 13.7918C20.7044 14.3084 20.6299 14.5662 20.4787 14.7579C20.3452 14.927 20.1693 15.0595 19.9697 15.1408C19.7443 15.2326 19.4765 15.2326 18.942 15.2326H6.78093M7.11671 23.9533C5.74064 23.9533 4.62511 22.8377 4.62511 21.4617C4.62511 20.0856 5.74064 18.9701 7.11671 18.9701C8.49279 18.9701 9.60832 20.0856 9.60832 21.4617C9.60832 22.8377 8.49279 23.9533 7.11671 23.9533Z"></path>
          </svg>
          <span>Купить в один клик</span>
        </button>

        <div class="availability bordered-rows">
          <div class="row">
            <div class="l"><span data-availability>{availability}</span></div>
            <div class="r"></div>
          </div>
        </div>

        {0 < stores.length && (
          <details class="stores">
            <summary class="stores-header">
              <span class="text">в магазинах</span>
              <svg class="svg" width="12" height="8" viewBox="0 0 12 8" xmlns="http://www.w3.org/2000/svg">
                <path d="M11.5 0.919922L6 6.91992L0.5 0.919922" stroke="currentColor" stroke-linecap="round"
                      stroke-linejoin="round"/>
              </svg>
            </summary>
            <div class="stores-main">
              {stores.map(({address, remnant}: IStore) => (
                <div class="row">
                  <img src="./images/catalog-detail-store.png" alt="" class="img" decoding="async" loading="lazy"/>
                  <div>
                    <div class="address">{address}</div>
                    <div class="remnant">{remnant}</div>
                  </div>
                </div>
              ))}
            </div>
          </details>
        )}

        {0 < sizes.length && (
          <div class="sizes">
            <div class="title">Выбрать размер</div>
            <form class="form-sizes" action="/api-get-availability" novalidate data-form-sizes>
              {sizes.map(({alias, title}: IOption) => (
                <label class="label">
                  <input type="radio" name="size" value={alias} checked={alias === '1'} hidden/>
                  <span>{title}</span>
                </label>
              ))}
              <button type="submit" hidden>Изменить размер</button>
            </form>
          </div>
        )}
      </section>

      <section class="section-spoilers">

        <details class="spoiler info">
          <summary class="spoiler-header">
            <span class="text">Описание</span>
            <svg class="svg" width="12" height="8" viewBox="0 0 12 8" xmlns="http://www.w3.org/2000/svg">
              <path d="M11.5 0.919922L6 6.91992L0.5 0.919922" stroke="#27282B" stroke-linecap="round"
                    stroke-linejoin="round"/>
            </svg>
          </summary>
          <div class="spoiler-main">
            <div class="inner-spoiler-wrapper closed">

              <p>
                <strong>Дробовик SGR-12 Platinum фирмы Cyma, Китай</strong>
                <br>
                Корпус выполнен из ударопрочного пластика и алюминиевого сплава. Все соединения выполнены плотно
                и надёжно, люфты полностью отсутствуют. В верхней части корпуса имеются RIS-планки, на которые
                установлены открытые складные прицельные приспособления в виде мушки и диоптра. Цевье изготовлено из
                алюминия, имеет интерфейс креплений M-LOK
              </p>

            </div>
            <button type="button" class="inner-spoiler-button show" data-inner-spoiler-show>
              <svg class="svg" width="11" height="7" viewBox="0 0 11 7" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.7002 0.700012L5.2002 5.70001L0.700195 0.700012" stroke="currentColor" stroke-width="1.4"
                      stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Показать полностью</span>
            </button>
            <button type="button" class="inner-spoiler-button hide" data-inner-spoiler-hide hidden>
              <svg class="svg" width="11" height="7" viewBox="0 0 11 7" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.7002 0.700012L5.2002 5.70001L0.700195 0.700012" stroke="currentColor" stroke-width="1.4"
                      stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Скрыть</span>
            </button>
          </div>
        </details>

        <details class="spoiler props">
          <summary class="spoiler-header">
            <span class="text">Характеристики</span>
            <svg class="svg" width="12" height="8" viewBox="0 0 12 8" xmlns="http://www.w3.org/2000/svg">
              <path d="M11.5 0.919922L6 6.91992L0.5 0.919922" stroke="#27282B" stroke-linecap="round"
                    stroke-linejoin="round"/>
            </svg>
          </summary>
          <div class="spoiler-main">
            <div class="inner-spoiler-wrapper closed">

              <div class="props-grid">
                {properties.map(({name, value}: IComparisonProductProperty) => (
                  <div class="cell name">{name}</div>
                  <div class="cell value">{value}</div>
                ))}
              </div>

            </div>
            <button type="button" class="inner-spoiler-button show" data-inner-spoiler-show>
              <svg class="svg" width="11" height="7" viewBox="0 0 11 7" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.7002 0.700012L5.2002 5.70001L0.700195 0.700012" stroke="currentColor" stroke-width="1.4"
                      stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Показать все характеристики</span>
            </button>
            <button type="button" class="inner-spoiler-button hide" data-inner-spoiler-hide hidden>
              <svg class="svg" width="11" height="7" viewBox="0 0 11 7" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.7002 0.700012L5.2002 5.70001L0.700195 0.700012" stroke="currentColor" stroke-width="1.4"
                      stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Скрыть</span>
            </button>
          </div>
        </details>

        <details class="spoiler video">
          <summary class="spoiler-header">
            <span class="text">Видеообзор</span>
            <svg class="svg" width="12" height="8" viewBox="0 0 12 8" xmlns="http://www.w3.org/2000/svg">
              <path d="M11.5 0.919922L6 6.91992L0.5 0.919922" stroke="#27282B" stroke-linecap="round"
                    stroke-linejoin="round"/>
            </svg>
          </summary>
          <div class="spoiler-main">
            <div style="position: relative; padding-top: 56.25%; width: 100%">
              <iframe src="https://kinescope.io/embed/ayZE9RLFr47gRh9ZGHWAhJ"
                      allow="autoplay; fullscreen; picture-in-picture; encrypted-media; gyroscope; accelerometer; clipboard-write;"
                      allowfullscreen style="position: absolute; width: 100%; height: 100%; top: 0; left: 0;"></iframe>
            </div>
          </div>
        </details>

        <details class="spoiler reviews">
          <summary class="spoiler-header">
            <span class="text">Отзывы <mark>(2)</mark></span>
            <svg class="svg" width="12" height="8" viewBox="0 0 12 8" xmlns="http://www.w3.org/2000/svg">
              <path d="M11.5 0.919922L6 6.91992L0.5 0.919922" stroke="#27282B" stroke-linecap="round"
                    stroke-linejoin="round"/>
            </svg>
          </summary>
          <div class="spoiler-main">

            <div class="comment">
              <div class="comment-header">
                <div class="name">Алексей</div>
                <div class="date">15.02.2024</div>
              </div>
              <div class="comment-main">
                <p>
                  Корпус выполнен из ударопрочного пластика и алюминиевого сплава.
                  Все соединения выполнены плотно и надёжно
                </p>
              </div>
            </div>
            <div class="comment">
              <div class="comment-header">
                <div class="name">Алексей</div>
                <div class="date">15.02.2024</div>
              </div>
              <div class="comment-main" data-comment-text>
                <p>
                  Корпус выполнен из ударопрочного пластика и алюминиевого сплава.
                  Все соединения выполнены плотно и надёжно
                </p>
              </div>
            </div>

            <form class="form-comment" action="/api-product-review" novalidate data-form-comment>
              <div class="title">Добавить отзыв</div>
              <input type="hidden" name="product-id" id="product-id" value={id}/>

              <div class="util-form-fieldset fieldset">
                <label class="label" for="review-name">Ваше имя:</label>
                <input type="text" name="name" id="review-name" maxlength="256"
                       autocorrect="off" spellcheck="false" class="util-form-field low input"/>
              </div>

              <InputTextarea label="Ваш отзыв:" name="review-text" classList={['low']}/>

              <button type="submit" class="util-button primary button">
                <span>Применить и сохранить</span>
              </button>
            </form>
          </div>
        </details>

        <details class="spoiler questions">
          <summary class="spoiler-header">
            <span class="text">Вопросы</span>
            <svg class="svg" width="12" height="8" viewBox="0 0 12 8" xmlns="http://www.w3.org/2000/svg">
              <path d="M11.5 0.919922L6 6.91992L0.5 0.919922" stroke="#27282B" stroke-linecap="round"
                    stroke-linejoin="round"/>
            </svg>
          </summary>
          <div class="spoiler-main">

            <form class="form-comment" action="/api-product-question" novalidate data-form-comment>
              <div class="title">Добавить вопрос</div>
              <input type="hidden" name="product-id" id="product-id" value={id}/>

              <div class="util-form-fieldset fieldset">
                <label class="label" for="question-name">Ваше имя:</label>
                <input type="text" name="name" id="question-name" maxlength="256"
                       autocorrect="off" spellcheck="false" class="util-form-field low input"/>
              </div>

              <InputTextarea label="Ваш отзыв:" name="question-text" classList={['low']}/>

              <button type="submit" class="util-button primary button">
                <span>Применить и сохранить</span>
              </button>
            </form>
          </div>
        </details>

        <details class="spoiler delivery">
          <summary class="spoiler-header">
            <span class="text">Доставка и оплата</span>
            <svg class="svg" width="12" height="8" viewBox="0 0 12 8" xmlns="http://www.w3.org/2000/svg">
              <path d="M11.5 0.919922L6 6.91992L0.5 0.919922" stroke="#27282B" stroke-linecap="round"
                    stroke-linejoin="round"/>
            </svg>
          </summary>
          <div class="spoiler-main">
            <p>
              <strong>Для расчета стоимости и срока доставки</strong>
              укажите Ваш город, а также добавьте товары в корзину.
            </p>
            <p><strong>Прочитайте это важно:</strong></p>
            <ol>
              <li>
                Для получения посылки возьмите свой паспорт или другой документ, удостоверяющий личность.
              </li>
              <li>
                Выбор транспортной компании остается за магазином. Если вы хотите выбрать транспортную компанию сами,
