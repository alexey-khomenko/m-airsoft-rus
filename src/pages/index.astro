      </div>
      <div class="items">
        <div class="swiper-wrapper">
          {reviews.map((item: { title: string, link: string, img: string }) => (
            <a href={item.link} class="swiper-slide item">
              <img src={item.img} alt={item.title} class="img"/>
              <span class="name">{item.title}</span>
            </a>
          ))}
        </div>
      </div>
    </UtilTile>

    <UtilTile tag="section" classList={['section-brands']} dataArray={[]} isHidden={false}>
      <div class="section-header">
        <h2 class="title">Популярные бренды</h2>
