---
import Layout from '../layouts/Layout.astro';
import PageNews from '../components/PageNews.astro';

import type {IPageNews} from '../interfaces';

import data from '../pages/reviews.json';

const {news, lastPage}: IPageNews = data;

const currentPage: number = 1;
const title: string = 'Обзоры';
const link: string = '/reviews';
---

<Layout title="Обзоры" page="reviews" isUser={true}>
  <PageNews title={title} link={link} news={news} lastPage={lastPage} currentPage={currentPage}/>
</Layout>
