---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {title, className} = Astro.props;
---

<!DOCTYPE html>
<html lang="ru" class:list={['layout', className]}>
<head>
  <meta charset="UTF-8"/>
  <meta name="description" content="Astro description"/>
  <meta name="viewport" content="width=device-width"/>
  <link rel="icon" type="image/svg+xml" href="./favicon.svg"/>
  <title>{title}</title>
  <link rel="stylesheet" href="./layouts/modern-normalize.css"/>
  <link rel="stylesheet" href="./layouts/layout.css"/>
</head>
<body>
<div id="app">
  <Header/>
  <main class="main">
    <slot/>
  </main>
  <aside class="aside" hidden="hidden">

  </aside>
  <Footer/>
</div>
</body>
</html>
